@using WebApp.Models
@model WebApp.Models.SearchData
@using WebApp.Content

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string info = " " + Model.Information;
}

<div class="jumbotron">
    <div class="h4 pb-3">Search</div>
    <div class="form-group">
        @using (Html.BeginForm("GetResults", "Search"))
        {
            @*@Html.AntiForgeryToken()

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Chtml.Control(Html, model => model.Datatype)*@

            <div class="form-check-inline">
                @Html.RadioButtonFor(model => model.SearchDatatype, "", new { @class = "form-check-input", @checked = "checked" }) @Html.Label("All", new { @class = "form-check-label" })
            </div>
            <div class="form-check-inline">
                @Html.RadioButtonFor(model => model.SearchDatatype, "Environment", new { @class = "form-check-input" }) @Html.Label("Environment", new { @class = "form-check-label" })
            </div>
            <div class="form-check-inline">
                @Html.RadioButtonFor(model => model.SearchDatatype, "Health", new { @class = "form-check-input" }) @Html.Label("Health", new { @class = "form-check-label" })
            </div>
            <br /><br />
            @*@Chtml.Control(Html, model => model.SearchId)*@

            @Chtml.Control(Html, model => model.SearchName)

            @Chtml.Control(Html, model => model.SearchAuthor)

            @Chtml.Control(Html, model => model.SearchPublisher)

            @Chtml.Control(Html, model => model.SearchKeywords)

            @Chtml.Control(Html, model => model.SearchDateFrom)

            @Chtml.Control(Html, model => model.SearchDateTo)

            <br />
            <input type="submit" value="Search" name="searchBtn" /><font color="red">@info</font>
        }

    </div>
</div>



