@using WebApp.Models
@model WebApp.Models.SearchData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string info = " " + Model.Information;
}

<div class="jumbotron">
    <div class="h4 pb-3">Search</div>
    <div class="form-group">
        @using (Html.BeginForm("GetResults", "Search"))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label pl-3 pb-3" })


            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label pl-3 pb-3" })


            @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label pl-3 pb-3" })


            @Html.TextBoxFor(model => model.Publisher, new { @class = "form-control" })
            @Html.LabelFor(model => model.Publisher, htmlAttributes: new { @class = "control-label pl-3 pb-3" })


            @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control" })
            @Html.LabelFor(model => model.Keywords, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.DateFrom, new { @type = "date", @class = "form-control"})
            @Html.LabelFor(model => model.DateFrom, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.DateTo, new { @type = "date", @class = "form-control"})
            @Html.LabelFor(model => model.DateTo, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
                                 
            <br />
            <input type="submit" value="Search" name="searchBtn" /><font color="red">@info</font>
        }

    </div>
</div>

<br />


