@model WebApp.Models.Documents.ReportDocument

@{
    ViewBag.Title = "Register a document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">

    <div class="h4 pb-3">@ViewBag.Title</div>
    <div class="form-group">
        @using (Html.BeginForm("Document", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="pb-4">
            <div class="form-check-inline">
                @Html.RadioButtonFor(model => model.DataType, "Environment", new { @class = "form-check-input" }) @Html.Label("Environment", new { @class = "form-check-label" })
            </div>
            <div class="form-check-inline">
                @Html.RadioButtonFor(model => model.DataType, "Health", new { @class = "form-check-input" }) @Html.Label("Health", new { @class = "form-check-label" })
            </div>
        </div>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label pl-3 pb-3 " })

            @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control", @Value = DateTime.Now })
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.Publisher, new { @class = "form-control" })
            @Html.LabelFor(model => model.Publisher, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextAreaFor(model => model.Summary, new { @class = "form-control" })
            @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control" })
            @Html.LabelFor(model => model.Keywords, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.ExternalLink, new { @class = "form-control" })
            @Html.LabelFor(model => model.ExternalLink, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.File, new { @type = "file", @class = "form-control-file" })
            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
            <br />
            <input type="submit" class="form-control btn btn-outline-dark col-md-2" />
            <div class="custom-control-label col-md-2">@ViewBag.FileStatus</div>
            }
        </div>
        </div>


