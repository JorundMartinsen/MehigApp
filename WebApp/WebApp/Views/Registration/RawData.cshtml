@model WebApp.Models.Documents.RawDataDocument

@{
    ViewBag.Title = "Register raw data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">

    <div class="h4 pb-3">
        @ViewBag.Title
    </div>


    @using (Html.BeginForm("RawData", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body row">
        <div class="col-md-4">
            <div class="form-group pb-4">
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.DataType, "Environment", new { @class = "form-check-input" }) @Html.Label("Environment", new { @class = "form-check-label" })
                </div>
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.DataType, "Health", new { @class = "form-check-input" }) @Html.Label("Health", new { @class = "form-check-label" })
                </div>
            </div>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control tb" })
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label pl-3 pb-3 " })

            @Html.TextBoxFor(model => model.Author, new { @class = "form-control tb" })
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control tb", @Value = DateTime.Now })
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control tb" })
            @Html.LabelFor(model => model.Keywords, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
            <hline />
            @Html.TextBoxFor(model => model.Seperator, new { @class = "form-control tb" })
            @Html.LabelFor(model => model.Seperator, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
            <br />
            <input type="submit" class="form-control btn btn-outline-dark col-md-4" />
            <div class="col-md-6">@ViewBag.FileStatus</div>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Header, new { @class = "form-control" })
        </div>
    </div>
     }
</div>

