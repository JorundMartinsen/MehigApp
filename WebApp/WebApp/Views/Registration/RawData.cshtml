@model WebApp.Models.Documents.RawDataDocument

@{
    ViewBag.Title = "Register raw data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">

    <div class="h4 pb-3">
        @ViewBag.Title
    </div>


    @using (Html.BeginForm("RawData", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

        
        <div class="modal-body row">
            <div class="col-lg-4">
                <div class="form-group pb-4">
                    <div class="form-check-inline">
                        @Html.RadioButtonFor(model => model.Datatype, "Environment", new { @class = "form-check-input" }) @Html.Label("Environment", new { @class = "form-check-label" })
                    </div>
                    <div class="form-check-inline">
                        @Html.RadioButtonFor(model => model.Datatype, "Health", new { @class = "form-check-input" }) @Html.Label("Health", new { @class = "form-check-label" })
                    </div>
                </div>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control tb" })
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label pl-3 pb-3 " })

                @Html.TextBoxFor(model => model.Author, new { @class = "form-control tb" })
                @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

                @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control tb", @Value = DateTime.Now })
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

                @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control tb" })
                @Html.LabelFor(model => model.Keywords, htmlAttributes: new { @class = "control-label pl-3 pb-3" })

            </div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Header, new { @class = "form-control tb" })
                @Html.LabelFor(model => model.Header, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
                <br />
                @Html.TextAreaFor(model => model.Data, new { @class = "form-control tb noresize" })
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
                <div class="col-lg-3 pl-3 pb-3">
                    @Html.TextBoxFor(model => model.Separator, new { @class = "form-control tb" })
                    @Html.LabelFor(model => model.Separator, htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.Separator, "*")
                </div>
                <div class="col-lg-3">
                    @Html.TextBoxFor(model => model.RowColumn, new { @class = "form-control tb" })
                    @Html.LabelFor(model => model.RowColumn, htmlAttributes: new { @class = "control-label pl-3 pb-3" })
                </div>
                <div class="col-lg-6">
                    @Html.TextBoxFor(model => model.File, new { @type = "file", @class = "form-control-file" })
                </div>
                
            </div>
            <div align="center">
                <input type="submit" class="btn btn-outline-dark btn-lg" />
                <div class="col-lg-6">@ViewBag.FileStatus</div>
            </div>
        </div>
    }
</div>

