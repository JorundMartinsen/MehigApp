<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        if (Request.Browser.Browser != "IE") {
            Scripts.Render("~/bundles/layout");
        }
    }

</head>
<body>
    <!--TOP NAV BAR-->
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <!--TITLE-->
        @Html.ActionLink("Monitoring app", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <!--DROPDOWN BUTTON FOR SMALL SCREENS-->
        <button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--NAVIGATION ITEMS-->
        <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("No/En", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("News", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Login", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Search", "Index", "Search", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                <li>
                    @Html.ActionLink("Add Data", "Index", "Registration", null, new { @class = "nav-link" })
                </li>
                <!--VISIBLE ON SMALL SCREENS ONLY-->
                <li class="nav-item d-sm-block d-md-none">
                    @Html.ActionLink("Environmental data", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item d-sm-block d-md-none">
                    @Html.ActionLink("Health data", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <!--SMALL DEVICE MENU END-->
            </ul>
        </div>
    </nav>
    <!--SIDE BAR AND CONTENT-->
    <div class="row" id="body-row">
        <!--SIDEBAR-->
        <div id="sidebar-container" class="sidebar-expanded d-none d-md-block col-2 bg-light">
            <ul class="navbar-nav sticky-top sticky-offset">
                <li class="nav-item">
                    @Html.ActionLink("Environmental data", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Health data", "Notimplemented", "Home", new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        <!--SIDEBAR END-->
        <div class="col py3 pt-3">
            @RenderBody()
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
